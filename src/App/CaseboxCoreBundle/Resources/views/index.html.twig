{% extends('AppDashboardBundle::base.html.twig') %}

{% block title %}ECMRS core{% endblock %}

{% block body %}
    <p class="text-muted">Click on core name to review core details.</p>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Core name</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {% if items %}
                {% for item in items %}
                    <tr>
                        <td><a href="{{ url('admin_core_view', {'id':item.id}) }}">{{ item.coreName }}</a></td>
                        <td>{{ item.createdAt }}</td>
                        <td>{{ item.updatedAt }}</td>
                        <td>{{ item.actions|raw }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td></td>
                    <td>No cores available.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    {% include 'AppDashboardBundle::auto-refresh.html.twig' %}

    <ul>
        <li><a href="{{ path('admin_core_add') }}">Add new ECMRS core</a></li>
        <li><a href="{{ path('admin') }}">Go back</a></li>
    </ul>
{% endblock %}

